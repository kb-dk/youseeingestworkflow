<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>


    <parent>
        <groupId>dk.statsbiblioteket.sbprojects</groupId>
        <artifactId>sbprojects-parent</artifactId>
        <version>3</version>
    </parent>
    <groupId>dk.statsbiblioteket.mediespring</groupId>
    <artifactId>yousee-workflow</artifactId>
    <version>0.2-SNAPSHOT</version>


    <properties>
        <youseeDownloader.version>master</youseeDownloader.version>
        <downloadInitiator.version>0.0.1-SNAPSHOT</downloadInitiator.version>
        <bitrepoClient.version>0.2</bitrepoClient.version>
    </properties>

    <scm>
        <connection>scm:git:git://github.com/blekinge/SB-yousee-workflow.git</connection>
        <url>scm:git:git://github.com/blekinge:SB-yousee-workflow.git</url>
        <developerConnection>scm:git:git://github.com/blekinge/SB-yousee-workflow.git</developerConnection>
    </scm>
    <dependencies>
        <dependency>
            <groupId>com.googlecode.json-simple</groupId>
            <artifactId>json-simple</artifactId>
            <version>1.1.1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>dk.statsbiblioteket.mediaplatform.ingest</groupId>
            <artifactId>ingest_initiator_media_files</artifactId>
            <version>${downloadInitiator.version}</version>
        </dependency>
        <dependency>
            <groupId>dk.statsbiblioteket.mediaplatform</groupId>
            <artifactId>bitrepository-url-client</artifactId>
            <version>${bitrepoClient.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>wagon-maven-plugin</artifactId>
                <version>1.0-beta-4</version>
                <executions>
                    <execution>
                        <id>download-youseeDownloadApp</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>download-single</goal>
                        </goals>
                        <configuration>
                            <serverId>github</serverId>
                            <url>https://raw.github.com/jrgatsb/yousee-file-downloader/${youseeDownloader.version}/</url>
                            <fromFile>yousee-downloader.sh</fromFile>
                            <toDir>${project.build.directory}/YouseeDownloader</toDir>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-5</version>
                <configuration>
                    <descriptors>
                        <descriptor>src/main/assembly/assembly.xml</descriptor>
                    </descriptors>
                    <attach>true</attach>

                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <!--
                                <configuration>
                                    <skipIfEmpty>true</skipIfEmpty>
                                </configuration>
                -->


            </plugin>
        </plugins>
    </build>

</project>
