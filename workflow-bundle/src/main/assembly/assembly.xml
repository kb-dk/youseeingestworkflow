<assembly>

    <id>package</id>

    <formats>
        <format>zip</format>
    </formats>
    <!--<includeBaseDirectory>false</includeBaseDirectory>-->

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>workflowDependencies</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>com.googlecode.json-simple:json-simple</include>
            </includes>
            <scope>runtime</scope>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>components/Bitrepository_Ingester</outputDirectory>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>true</unpack>
            <includes>
                <include>dk.statsbiblioteket.mediaplatform:url-put-client</include>
            </includes>
            <scope>runtime</scope>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>components/profileValidator</outputDirectory>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>true</unpack>
            <includes>
                <include>dk.statsbiblioteket.mediespring:SB-yousee-profile-validation</include>
            </includes>
            <scope>runtime</scope>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>components/digiTVIngester</outputDirectory>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>true</unpack>
            <includes>
                <include>dk.statsbiblioteket.digitv.youseeingester:YouseeDigitvIngester</include>
            </includes>
            <scope>runtime</scope>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>components/downloadInitiatorLibs</outputDirectory>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>true</unpack>
            <includes>
                <include>dk.statsbiblioteket.mediaplatform.ingest:ingest_initiator_bundle</include>
            </includes>
            <scope>runtime</scope>
        </dependencySet>

        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>components/domsIngester</outputDirectory>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>true</unpack>
            <includes>
                <include>dk.statsbiblioteket.doms:yousee-doms-ingest-client</include>
            </includes>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>


    <fileSets>

        <fileSet>
            <outputDirectory>bin</outputDirectory>
            <directory>src/main/bin</directory>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>integrationTests</outputDirectory>
            <directory>src/main/integrationTests</directory>
            <fileMode>755</fileMode>
        </fileSet>

        <fileSet>
            <outputDirectory>scripts</outputDirectory>
            <directory>src/main/scripts</directory>
            <fileMode>755</fileMode>
        </fileSet>

        <fileSet>
            <outputDirectory>taverna</outputDirectory>
            <directory>src/main/taverna</directory>
        </fileSet>

        <fileSet>
            <outputDirectory>config</outputDirectory>
            <directory>src/main/config</directory>
        </fileSet>

        <fileSet>
            <outputDirectory>examples</outputDirectory>
            <directory>src/main/examples</directory>
        </fileSet>

        <fileSet>
            <outputDirectory>components/FFProbe_Characteriser</outputDirectory>
            <directory>src/main/components/FFProbe_Characteriser</directory>
        </fileSet>

        <!--

                <fileSet>
                    <outputDirectory>components/validationProfiles</outputDirectory>
                    <directory>src/main/validationProfiles</directory>
                </fileSet>

                <fileSet>
                    <outputDirectory>components/profileValidator</outputDirectory>
                    <directory>src/main/profileValidator</directory>
                </fileSet>
        -->

        <fileSet>
            <outputDirectory>components/youseeDownloader</outputDirectory>
            <directory>${project.build.directory}/YouseeDownloader</directory>
            <fileMode>755</fileMode>
        </fileSet>


    </fileSets>



</assembly>

