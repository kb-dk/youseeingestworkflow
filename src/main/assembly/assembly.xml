<assembly>


    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>workflowDependencies</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>com.googlecode.json-simple:json-simple</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>components/downloadInitiatorLibs</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>dk.statsbiblioteket.mediaplatform.ingest:ingest_initiator_media_files</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>components/bitrepoLibs</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>dk.statsbiblioteket.mediaplatform:bitrepository-url-client</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>components/profileValidator</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <unpack>true</unpack>
            <includes>
                <include>dk.statsbiblioteket.mediespring:SB-yousee-profile-validation</include>
            </includes>
        </dependencySet>
    </dependencySets>

    <fileSets>

        <fileSet>
            <outputDirectory>bin</outputDirectory>
            <directory>src/main/bin</directory>
            <fileMode>0755</fileMode>
        </fileSet>

        <fileSet>
            <outputDirectory>scripts</outputDirectory>
            <directory>src/main/scripts</directory>
            <fileMode>0755</fileMode>
        </fileSet>

        <fileSet>
            <outputDirectory>taverna</outputDirectory>
            <directory>src/main/taverna</directory>
        </fileSet>

        <fileSet>
            <outputDirectory>config</outputDirectory>
            <directory>src/main/config</directory>
        </fileSet>

        <fileSet>
            <outputDirectory>examples</outputDirectory>
            <directory>src/main/examples</directory>
        </fileSet>
        <!--

                <fileSet>
                    <outputDirectory>components/validationProfiles</outputDirectory>
                    <directory>src/main/validationProfiles</directory>
                </fileSet>

                <fileSet>
                    <outputDirectory>components/profileValidator</outputDirectory>
                    <directory>src/main/profileValidator</directory>
                </fileSet>
        -->

        <fileSet>
            <outputDirectory>components/youseeDownloader</outputDirectory>
            <directory>${project.build.directory}/YouseeDownloader</directory>
            <fileMode>755</fileMode>
        </fileSet>


    </fileSets>



</assembly>

